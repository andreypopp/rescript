{
  "name": "rescript",
  "version": "0.1.0",
  "description": "Rescript is a scripting runtime for ReasonML",
  "license": "MIT",
  "esy": {
    "release": {
      "releasedBinaries": [
        "rescript"
      ],
      "deleteFromBinaryRelease": [
        "opam__slash__ppxlib-*",
        "opam__slash__ocaml_compiler_libs-*",
        "opam__slash__ocaml_migrate_parsetree-*",
        "opam__slash__result-1.3.0-*",
        "opam__slash__ppx__derivers-1.0.0-*",
        "opam__slash__stdio-100000000.11.0-*",
        "opam__slash__base-100000000.11.0-*",
        "opam__slash__sexplib0-*",
        "opam__slash__jbuilder-*",
        "opam__slash__conf_m4-*",
        "esy_ocaml__slash__esy_installer-*",
        "esy_ocaml__slash__substs-*"
      ]
    },
    "build": [
      "jbuilder build"
    ],
    "install": [
      "esy-installer"
    ],
    "buildsInSource": "_build"
  },
  "dependencies": {
    "@esy-ocaml/esy-installer": "^0.0.0",
    "@opam/jbuilder": "*",
    "@opam/ppxlib": "*"
  },
  "peerDependencies": {
    "ocaml": "~4.6.1"
  },
  "devDependencies": {
    "@opam/merlin": "^3.0.3",
    "ocaml": "~4.6.1"
  }
}
